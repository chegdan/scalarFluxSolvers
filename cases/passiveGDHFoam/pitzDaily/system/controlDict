FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application scalarTransportFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         0.5;

deltaT          0.0001;

//writeControl    timeStep;
writeControl    adjustableRunTime;

//writeInterval   100;
writeInterval   0.01;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression uncompressed;

timeFormat      general;

timePrecision   6;

runTimeModifiable yes;

maxCo 		0.5;
//maxFd		0.5;

maxDeltaT 	0.01; // Maximum deltaT in seconds

adjustTimeStep yes;


// ************************************************************************* //

functions
(
	outletPatchMassFlowAverage
	{
		type patchCupMixing;
		functionObjectLibs ("libsimpleFunctionObjects.so" );
		verbose true;
		outputControl timeStep;
		outputInterval 1;
		patches ( outlet );
		fields ( C );
	}

	outletPatchAverage
	{
		type patchAverage;
		functionObjectLibs ("libsimpleFunctionObjects.so" );
		verbose true;
		outputControl timeStep;
		outputInterval 1;
		patches ( outlet );
		fields ( C );
	}
);
